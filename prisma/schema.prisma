// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:.prisma/dev.db"
}

model LiveType {
  id   Int      @id @default(autoincrement())
  type String
  lives LiveName[] // ライブ種別テーブルとライブ名テーブルのリレーション
}

model LiveName {
  id           Int       @id @default(autoincrement())
  name         String
  year         Int
  live_type_id Int
  liveType     LiveType  @relation(fields: [live_type_id], references: [id])
  venues       Venue[]   // ライブ名テーブルと会場テーブルのリレーション
  songPerformances SongPerformance[]
}

model Venue {
  id           Int       @id @default(autoincrement())
  name         String
  live_name_id Int
  liveName     LiveName  @relation(fields: [live_name_id], references: [id])
  songPerformances SongPerformance[]
}

model Song {
  id     Int     @id @default(autoincrement())
  title  String
  songPerformances SongPerformance[]
}

model SongPerformance {
  id          Int       @id @default(autoincrement())
  live_name_id Int
  venue_id     Int
  song_id      Int
  times_sung   Int
  liveName     LiveName @relation(fields: [live_name_id], references: [id])
  venue        Venue    @relation(fields: [venue_id], references: [id])
  song         Song     @relation(fields: [song_id], references: [id])
}
